@using Diploma.Resources
@model Diploma.DiplomaDb.Topic

@{
    ViewBag.Title = Resource.Remove;
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Topic</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Parent.CaptionEN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Parent.CaptionEN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject.CaptionEN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.CaptionEN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CaptionEN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaptionEN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CaptionRU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaptionRU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CaptionUA)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaptionUA)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @if (Model.ParentId == null)
            {
                @Html.ActionLink(Resource.Back, "Index", new { id = Model.SubjectId })
            }
            else
            {
                @Html.ActionLink(Resource.Back, "Details", new { id = Model.ParentId })
            }
        </div>
    }
</div>
