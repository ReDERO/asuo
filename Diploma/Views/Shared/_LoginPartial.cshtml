@using Diploma.Resources

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", new { ReturnUrl = HttpContext.Current.Request.Url.AbsoluteUri }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(Resource.Welcome + User.Identity.Name + "!", "UserProfile", "Account", new { id = User.UserId }, null)
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resource.Leave</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Resource.Register, "Register", "Account", new { ReturnUrl = HttpContext.Current.Request.Url.AbsoluteUri }, null)</li>
        <li>@Html.ActionLink(Resource.ToLogIn, "Login", "Account", new { ReturnUrl = HttpContext.Current.Request.Url.AbsoluteUri }, null)</li>
    </ul>
}
