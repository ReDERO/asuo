@using Diploma.Helpers
@using Diploma.Resources
@model Diploma.Models.RecommendedListViewModel

@{
    ViewBag.Title = Resource.Recommended;
}

@Html.Breadcrumbs((Diploma.Models.BreadCrumbsModel)ViewBag.BreadCrumbs)

<h2>@ViewBag.Title</h2>
<h4>@Resource.RecommendedDescription</h4>
<hr />

@if (Model.Count == 0)
{
    <div class="row">
        <div class="container">
            @Resource.SubscribeOnSomeEducationProfiles
        </div>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="container">
                <div class="well">

                    <a href="#" data-toggle="collapse" class="active" data-target="#@item.Skill.Id">
                        <i class="glyphicon glyphicon-folder-close"></i>
                        @item.Skill.Caption
                    </a>

                    <div id="@item.Skill.Id" class="collapse">
                        <ul class="nav nav-list">
                            <li class="nav-header">l</li>
                            @foreach (var task in item)
                            {
                                <li>
                                    <div class="container">
                                        @Html.ActionLink(task.Caption, "Details", new { id = task.Id })
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>

                </div> <!--well-->
            </div> <!--container-->
        </div> <!--row-->
    }
}

